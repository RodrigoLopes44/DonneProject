@model IEnumerable<DonneProject.Models.CadastroSobrev>

@{
    ViewData["Title"] = "Index";
}

<div class="header-pags p-0 m-0">
    <h2 class="text-center">Nossas Donnes!</h2>
</div>
<hr class="p-0 m-0"/>

<div class="w-100 p-5">
    <p>
        <a class="d-inline-flex align-items-center p-3 btn btn-outline-light m-4 rounded font-weight-bold cadastro"
            asp-action="Create">
            <span class="material-icons px-1">
                add_circle
            </span>Inserir Nova Donne!
        </a>
    </p>
    <div class="card-deck d-flex">
        @foreach (var item in Model)
        {
            <div class="card border-secondary mb-3" style="max-width: 18rem;">
                <div class="card-header">Donne! n° @Html.DisplayFor(modelItem => item.Id)</div>
                <div class="card-body text-secondary">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nome)</h5>
                    <p class="card-text">Função: @Html.DisplayFor(modelItem => item.NomeFuncao.NomeFuncao)</p>
                </div>
                <hr>
                <div class="text-center p-2">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                        <span class="material-icons">
                            edit
                        </span>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                        <span class="material-icons">
                            info
                        </span>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                        <span class="material-icons">
                            delete
                        </span>
                    </a>
                </div>
            </div>
        }
    </div>
</div>