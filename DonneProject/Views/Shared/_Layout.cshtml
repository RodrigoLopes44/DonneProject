<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" type="imagex/png" href="~/Assets/icone.ico">
    <title>@ViewData["Title"] - DonneProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Baumans&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
</head>
<body>
    <header class="p-0 m-0">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom border-dark box-shadow mb-0">
            <div class="container">
                <a class="navbar-brand mx-1" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/assets/Logo_Donne.svg" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between bg-dark">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item bg-dark">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item bg-dark">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Sobre">Sobre nós</a>
                        </li>
                        <li class="nav-item bg-dark">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Cadastro">Cadastro</a>
                        </li>
                        <li class="nav-item bg-dark">
                            <a class="nav-link text-light" asp-area="" asp-controller="Contato" asp-action="Create">Contato</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0">
        <main role="main" class="p-0">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light">
        <div class="container">
            &copy; 2022 - DonneProject -  <a  href="https://www.recodepro.org.br/" target="_blank"><img class="img-recode" src="~/assets/recodepro.png" alt="Recode pro"></a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
